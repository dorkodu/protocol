{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "outDir": "lib",
    "rootDir": ".",
    "allowImportingTsExtensions": true,

    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
